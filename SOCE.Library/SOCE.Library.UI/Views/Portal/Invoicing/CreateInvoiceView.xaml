<UserControl x:Class="SOCE.Library.UI.Views.CreateInvoiceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:wpf="clr-namespace:MaterialDesignThemes.Wpf;assembly=MaterialDesignThemes.Wpf"
             xmlns:local="clr-namespace:SOCE.Library.UI"
             mc:Ignorable="d" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Background="Transparent" Width="800" >

    <Grid Margin="16" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" IsHitTestVisible ="{Binding Istouchable, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
        <Grid.Resources>
            <local:FontWeightConverter x:Key="fontconverter"/>
            <local:InverseFontWeightConverter x:Key="inversefontconverter"/>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Invoice" FontSize="24" />
            <Grid Grid.Row="0" Grid.Column="1" HorizontalAlignment="Right">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="Invoice Number:" FontSize="14" />
                <TextBox Grid.Column="1" VerticalAlignment="Center" Text="{Binding InvoiceNumberInp, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" FontWeight="DemiBold" FontSize="14" Margin="5 3 0 0"/>
            </Grid>
            <DatePicker Grid.Row="1" FontSize="14" HorizontalAlignment="Stretch" VerticalAlignment="Center" Padding="0" Margin="0 10 0 0"
                        SelectedDate="{Binding Path=InvoiceDateInp,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                        materialDesign:HintAssist.Hint="Date" FontWeight="DemiBold"/>
            <TextBox Grid.Row="2" VerticalAlignment="Center" Text="{Binding ClientNameInp, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" FontSize="14" Padding="0" 
                      materialDesign:HintAssist.Hint="Client Name" FontWeight="DemiBold"/>
            <TextBox Grid.Row="3" VerticalAlignment="Center" Text="{Binding ClientCompanyNameInp, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" FontSize="14"  Padding="0" 
                     materialDesign:HintAssist.Hint="Client Company Name" FontWeight="DemiBold"/>
            <TextBox Grid.Row="4" VerticalAlignment="Center" Text="{Binding ClientAddressInp, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" FontSize="14" Padding="0" 
                     materialDesign:HintAssist.Hint="Client Address" FontWeight="DemiBold"/>
            <TextBox Grid.Row="5" VerticalAlignment="Center" Text="{Binding ClientCityInp, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" FontSize="14" Padding="0" 
                     materialDesign:HintAssist.Hint="Client City, State, ZIP" FontWeight="DemiBold"/>
            <Border Grid.Row="6"  BorderThickness="0 2 0 0 " BorderBrush="Black" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Grid.ColumnSpan="2" Margin="0 20 0 0">
                <Grid HorizontalAlignment="Stretch">
                    <TextBlock  VerticalAlignment="Center" Text="FOR PROFESSIONAL STRUCTURAL ENGINEERING SERVICES RENDERED" FontSize="14" />

                </Grid>
            </Border>
            <Grid Grid.Row="7" Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="PROJECT:" FontSize="14" />
                <TextBox Grid.Column="1"  VerticalAlignment="Center" Text="{Binding ProjectNameInp, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" FontSize="14" FontWeight="DemiBold" Margin="5 0 0 0"/>
            </Grid>

            <Grid Grid.Row="7" Grid.Column="1" HorizontalAlignment="Right" Width="150">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="S &amp; O Project #:" FontSize="14" />
                <TextBox Grid.Column="1" VerticalAlignment="Center" Text="{Binding ProjectNumberInp, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" FontWeight="DemiBold" FontSize="14" />
            </Grid>
        </Grid>
        <Border Grid.Row="1" BorderBrush="Black" BorderThickness="1" Margin="0 20 0 0">
            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="90"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Stretch" TextAlignment="Left" Text="Contract Scope" Margin="3 0 0 0" FontSize="14" />
                <TextBlock Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Stretch" TextAlignment="Center" Text="Contract Fee" FontSize="14" />
                <TextBlock Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Stretch" TextAlignment="Center" Text="% Comp" FontSize="14" />
                <TextBlock Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Stretch" TextAlignment="Center" Text="Invoiced to&#10;Date" FontSize="14" />
                <TextBlock Grid.Column="4" VerticalAlignment="Center" HorizontalAlignment="Stretch" TextAlignment="Center" Text="Previous" FontSize="14" />
                <TextBlock Grid.Column="5" VerticalAlignment="Center" HorizontalAlignment="Stretch" TextAlignment="Center" Text="This Period" FontSize="14" />
                <TextBlock Grid.Column="6" VerticalAlignment="Center" HorizontalAlignment="Stretch" TextAlignment="Right" Margin="0 0 30 0" Text="Spent" FontSize="14" Foreground="{StaticResource SOCERed}"/>

            </Grid>
        </Border>

        <ItemsControl Grid.Row="2" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" 
                      Visibility="{Binding DoBasicServicesExist, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource BooleanToVisibilityConverter}}"
                              VerticalAlignment="Stretch" ItemsSource="{Binding NonAdServicePhases}" BorderBrush="Black" BorderThickness="1">
            <ItemsControl.Template>
                <ControlTemplate>
                    <ScrollViewer CanContentScroll="True" Padding="{TemplateBinding Padding}" Focusable="False">
                        <ItemsPresenter />
                    </ScrollViewer>
                </ControlTemplate>
            </ItemsControl.Template>

            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel IsVirtualizing="True" VirtualizationMode="Recycling" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid IsHitTestVisible="{Binding CanBeEdited, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                        <Grid.ColumnDefinitions>
                            <!--<ColumnDefinition Width="80"/>-->
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="80"/>
                        </Grid.ColumnDefinitions>

                        <!--<materialDesign:PopupBox Grid.Column="0" Width="25" Height="25" Padding="0" Background="Transparent" BorderBrush="Transparent" Foreground="Black"
                                                                         Style="{StaticResource MaterialDesignMultiFloatingActionAccentPopupBox}"

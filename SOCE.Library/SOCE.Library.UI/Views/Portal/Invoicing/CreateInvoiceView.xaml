                        <TextBox Grid.Column="0" Padding="0"  HorizontalAlignment="Stretch" Text="{Binding ScopeName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  Style="{StaticResource NonUnderLineTextBox}"
                                 AcceptsReturn="True" TextAlignment="Left" FontSize="14" FontWeight="DemiBold" VerticalAlignment="Stretch" 
                                 materialDesign:TextFieldAssist.DecorationVisibility="Hidden" BorderThickness="0" />
                        <TextBlock Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Stretch" TextAlignment="Center" 
                                   Visibility="{Binding IsContractVisible, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource BooleanToVisibilityConverter}}"
                                   Text="{Binding ContractFee, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat='${0:#,0.##}'}" FontSize="14" />
                        <TextBox Grid.Column="2" Padding="0"  VerticalAlignment="Center" HorizontalAlignment="Stretch" TextAlignment="Right" Margin="0 0 5 0"
                                 Visibility="{Binding IsContractVisible, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource BooleanToVisibilityConverter}}"
                                 Style="{StaticResource NonUnderLineTextBox}"
                                 FontWeight="{Binding IsContractVisible, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource fontconverter}}"
                                 Text="{Binding PercentComplete, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" FontSize="14" materialDesign:TextFieldAssist.SuffixText="%"/>
                        <TextBlock Grid.Column="3" Padding="0"  VerticalAlignment="Center" HorizontalAlignment="Stretch" TextAlignment="Right" Margin="0 0 5 0"
                                 Text="{Binding InvoicedtoDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat='${0:#,0.##}'}" FontSize="14" />
                        <TextBlock Grid.Column="4" Padding="0"  VerticalAlignment="Center" HorizontalAlignment="Stretch" TextAlignment="Right" Margin="0 0 5 0" 
                                 Text="{Binding PreviousInvoiced, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat='${0:#,0.##}'}" FontSize="14" />
                        <TextBox Grid.Column="5" Padding="0"  VerticalAlignment="Center" HorizontalAlignment="Stretch" TextAlignment="Right" Margin="0 0 5 0"
                                 Style="{StaticResource NonUnderLineTextBox}" IsHitTestVisible="{Binding IsContractVisible, Converter={StaticResource InvertBooleanConverter}}"
                                 Text="{Binding ThisPeriodInvoiced, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat='${0:#,0.##}'}" FontSize="14" 
                                 FontWeight="{Binding IsContractVisible, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource inversefontconverter}}"/>
                        <TextBlock Grid.Column="6" VerticalAlignment="Center" HorizontalAlignment="Stretch" TextAlignment="Right" Margin="0 0 5 0"
                                   Text="{Binding BudgetSpent, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat='${0:#,0.##}'}" FontSize="14" Foreground="{StaticResource SOCERed}"/>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <Border Grid.Row="4" BorderBrush="Black" BorderThickness="0 1 0 0" Margin="0 5 0 0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="95"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Stretch" TextAlignment="Left" Text="Total Basic Services" FontSize="14" />
                <TextBlock Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Stretch" TextAlignment="Center" Margin="0 0 5 0"
                           Visibility="{Binding IsTotalContractFee, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource BooleanToVisibilityConverter}}"
                           Text="{Binding TotalContractFee, StringFormat='${0:#,0.##}'}" FontSize="14" Padding="0"  />
                <TextBlock Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Stretch" TextAlignment="Right" Margin="0 0 8 0"
                           Text="{Binding InvoicedToDateTotal, StringFormat='${0:#,0.##}'}" FontSize="14" Padding="0"  />
                <TextBlock Grid.Column="4" VerticalAlignment="Center" HorizontalAlignment="Stretch" TextAlignment="Right" Margin="0 0 8 0" Text="{Binding PreviousTotal, StringFormat='${0:#,0.##}'}" FontSize="14" Padding="0"  />
                <TextBlock Grid.Column="5" VerticalAlignment="Center" HorizontalAlignment="Stretch" TextAlignment="Right" Margin="0 0 8 0" Text="{Binding ThisPeriodTotal, StringFormat='${0:#,0.##}'}" FontSize="14" Padding="0" />
            </Grid>
        </Border>
        <Grid  Grid.Row="5" Margin="0 10 0 0" Visibility="{Binding DoAdservicesExist, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Stretch" TextAlignment="Left" Text="Additional Services" FontSize="14" />
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Stretch" TextAlignment="Center" Text="Services Through " FontSize="14" />

                <DatePicker Grid.Column="1" FontSize="14" HorizontalAlignment="Left" VerticalAlignment="Center" Padding="0" Margin="5 0 0 0"
                        SelectedDate="{Binding Path=DateofServicesAreComplete,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" 
                        materialDesign:HintAssist.Hint="Date" FontWeight="DemiBold"/>
                
                <!--<TextBlock Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Stretch" TextAlignment="Left" Text="{Binding DateofServicesAreComplete,StringFormat='{}{0:MM/dd/yyyy}'}" 
                           FontWeight="DemiBold" FontSize="14" Margin="5 0 0 0" />-->
            </Grid>
        </Grid>

        <ItemsControl Grid.Row="6" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" 
                      Visibility="{Binding DoAdservicesExist, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource BooleanToVisibilityConverter}}"
                              VerticalAlignment="Stretch" ItemsSource="{Binding AdServicePhasesUnInvoiced}" BorderBrush="Black" BorderThickness="1">
            <ItemsControl.Template>
                <ControlTemplate>
                    <ScrollViewer CanContentScroll="True" Padding="{TemplateBinding Padding}" Focusable="False">
                        <ItemsPresenter />
                    </ScrollViewer>
                </ControlTemplate>
            </ItemsControl.Template>

            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel IsVirtualizing="True" VirtualizationMode="Recycling" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid IsHitTestVisible="{Binding CanBeEdited, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="80"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0" Padding="0"  HorizontalAlignment="Stretch" Text="{Binding ScopeName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  Style="{StaticResource NonUnderLineTextBox}"
                                 AcceptsReturn="True" TextAlignment="Left" FontSize="14" FontWeight="DemiBold" VerticalAlignment="Stretch" TextWrapping="Wrap"
                                 materialDesign:TextFieldAssist.DecorationVisibility="Hidden" BorderThickness="0"/>
                        <TextBlock Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Stretch" TextAlignment="Center" 
                                   Visibility="{Binding IsContractVisible, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource BooleanToVisibilityConverter}}"
                                   Text="{Binding ContractFee, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat='${0:#,0.##}'}" FontSize="14" />
                        <TextBox Grid.Column="2" Padding="0"  VerticalAlignment="Center" HorizontalAlignment="Stretch" TextAlignment="Right" Margin="0 0 5 0"
                                 Visibility="{Binding IsContractVisible, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource BooleanToVisibilityConverter}}"
                                 Style="{StaticResource NonUnderLineTextBox}"
                                  FontWeight="{Binding IsContractVisible, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource fontconverter}}"
                                 Text="{Binding PercentComplete, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" FontSize="14" materialDesign:TextFieldAssist.SuffixText="%"/>
                        <TextBlock Grid.Column="3" Padding="0"  VerticalAlignment="Center" HorizontalAlignment="Stretch" TextAlignment="Right" Margin="0 0 5 0"
                                 Text="{Binding InvoicedtoDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat='${0:#,0.##}'}" FontSize="14" />
                        <TextBlock Grid.Column="4" Padding="0"  VerticalAlignment="Center" HorizontalAlignment="Stretch" TextAlignment="Right" Margin="0 0 5 0" 
                                 Text="{Binding PreviousInvoiced, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat='${0:#,0.##}'}" FontSize="14" />
                        <TextBox Grid.Column="5" Padding="0"  VerticalAlignment="Center" HorizontalAlignment="Stretch" TextAlignment="Right" Margin="0 0 5 0"
                                 Style="{StaticResource NonUnderLineTextBox}" IsHitTestVisible="{Binding IsContractVisible, Converter={StaticResource InvertBooleanConverter}}"
                                 Text="{Binding ThisPeriodInvoiced, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat='${0:#,0.##}'}" FontSize="14"
                                 FontWeight="{Binding IsContractVisible, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource inversefontconverter}}"/>
                        <TextBlock Grid.Column="6" VerticalAlignment="Center" HorizontalAlignment="Stretch" TextAlignment="Right" Margin="0 0 5 0"
                                   Text="{Binding BudgetSpent, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat='${0:#,0.##}'}" FontSize="14" Foreground="{StaticResource SOCERed}"/>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <Border Grid.Row="7" BorderBrush="Black" BorderThickness="0 1 0 0" Margin="0 5 0 0" 
                Visibility="{Binding DoAdservicesExist, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="95"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Stretch" TextAlignment="Left" 
                           Text="Total Additional Services This Invoice" FontSize="14"  Padding="0"/>
                <TextBlock Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Stretch" TextAlignment="Center" Margin="0 0 5 0"
                           Visibility="{Binding IsTotalContractAdFee, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource BooleanToVisibilityConverter}}"
                           Text="{Binding TotalContractAdFee, StringFormat='${0:#,0.##}'}" FontSize="14" Padding="0"  />
                <TextBlock Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Stretch" TextAlignment="Right" Margin="0 0 8 0" 
                           Text="{Binding InvoicedToDateTotalAd, StringFormat='${0:#,0.##}'}" FontSize="14"  Padding="0"/>
                <TextBlock Grid.Column="4" VerticalAlignment="Center" HorizontalAlignment="Stretch" TextAlignment="Right" Margin="0 0 8 0" 
                           Text="{Binding PreviousTotalAd, StringFormat='${0:#,0.##}'}" FontSize="14"  Padding="0"/>
                <TextBlock Grid.Column="5" VerticalAlignment="Center" HorizontalAlignment="Stretch" TextAlignment="Right" Margin="0 0 8 0" 
                           Text="{Binding ThisPeriodTotalAd, StringFormat='${0:#,0.##}'}" FontSize="14" Padding="0"/>
            </Grid>
        </Border>


        <TextBlock Grid.Row="8" VerticalAlignment="Center" HorizontalAlignment="Stretch" TextAlignment="Left" Text="Previous Additional Services" FontSize="14" Margin="0 20 0 0" 
                   Visibility="{Binding IsPreviousAdServiceVis, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource BooleanToVisibilityConverter}}" />
        
        <ItemsControl Grid.Row="9" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" 
                      Visibility="{Binding IsPreviousAdServiceVis, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource BooleanToVisibilityConverter}}"
                              VerticalAlignment="Stretch" ItemsSource="{Binding AdServicePhasesInvoiced}" BorderBrush="Black" BorderThickness="1">
            <ItemsControl.Template>
                <ControlTemplate>
                    <ScrollViewer CanContentScroll="True" Padding="{TemplateBinding Padding}" Focusable="False">
                        <ItemsPresenter />
                    </ScrollViewer>
                </ControlTemplate>
            </ItemsControl.Template>

            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel IsVirtualizing="True" VirtualizationMode="Recycling" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="80"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0" HorizontalAlignment="Stretch" Padding="0" Text="{Binding DateOfInvoice, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  
                                 TextAlignment="Left" FontSize="14" FontWeight="Regular" VerticalAlignment="Stretch" Style="{StaticResource NonUnderLineTextBox}"/>
                        <TextBox Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Stretch" Padding="0" TextAlignment="Right" Margin="0 0 5 0" Style="{StaticResource NonUnderLineTextBox}"
                                 Text="{Binding InvoicedtoDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat='${0:#,0.##}'}" FontSize="14" />
                        <TextBox Grid.Column="4" VerticalAlignment="Center" HorizontalAlignment="Stretch" Padding="0" TextAlignment="Right" Margin="0 0 5 0" Style="{StaticResource NonUnderLineTextBox}"
                                 Text="{Binding PreviousInvoiced, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat='${0:#,0.##}'}" FontSize="14" />
                        <TextBox Grid.Column="5" VerticalAlignment="Center" HorizontalAlignment="Stretch" Padding="0" TextAlignment="Right" Margin="0 0 5 0" Style="{StaticResource NonUnderLineTextBox}"
                                 Text="{Binding ThisPeriodInvoiced, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat='${0:#,0.##}'}" FontSize="14" />
                        <TextBlock Grid.Column="6" VerticalAlignment="Center" HorizontalAlignment="Stretch" Padding="0" TextAlignment="Right" Margin="0 0 5 0" Foreground="{StaticResource SOCERed}"
                                   Text="{Binding BudgetSpent, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat='${0:#,0.##}'}" FontSize="14" />
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <Border Grid.Row="10" BorderBrush="Black" BorderThickness="0 1 0 0" Margin="0 5 0 0" 
                Visibility="{Binding IsPreviousAdServiceVis, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="95"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Stretch" TextAlignment="Left" Text="Total Services To Date" FontSize="14"  />
                <TextBlock Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Stretch" TextAlignment="Right" Margin="0 0 8 0" Text="{Binding InvoicedToDateTotalToDate, StringFormat='${0:#,0.##}'}" FontSize="14" Padding="0" />
                <TextBlock Grid.Column="4" VerticalAlignment="Center" HorizontalAlignment="Stretch" TextAlignment="Right" Margin="0 0 8 0" Text="{Binding PreviousTotalToDate, StringFormat='${0:#,0.##}'}" FontSize="14" Padding="0" />
                <TextBlock Grid.Column="5" VerticalAlignment="Center" HorizontalAlignment="Stretch" TextAlignment="Right" Margin="0 0 8 0" Text="{Binding ThisPeriodTotalToDate, StringFormat='${0:#,0.##}'}" FontSize="14" Padding="0"/>
            </Grid>
        </Border>


        <Border Grid.Row="11" BorderBrush="Black" BorderThickness="0 2 0 0" Margin="0 5 0 0"  >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="95"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Stretch" TextAlignment="Left" Text="Total Additional Services This Invoice" FontWeight="Bold"  FontSize="14" />
                <TextBlock Grid.Column="5" VerticalAlignment="Center" HorizontalAlignment="Stretch" TextAlignment="Right" Padding="0" Margin="0 0 8 0" Text="{Binding TotalAmountDue, StringFormat='${0:#,0.##}'}" FontWeight="Bold" FontSize="14" />
            </Grid>

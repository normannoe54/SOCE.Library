<UserControl x:Class="SOCE.Library.UI.Views.ProjectView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SOCE.Library.UI"
             xmlns:views="clr-namespace:SOCE.Library.UI.Views"
             xmlns:component="clr-namespace:SOCE.Library.UI.Components"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" x:Name="MainWindow">
    <Grid Grid.Column="1" Margin="30 40 20 20">
        <Grid.Resources>
            <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.PopupBox.xaml"/>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="1" Margin="20 0 0 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>

            <!--Total in progress projects-->
            <StackPanel Grid.Row="0" HorizontalAlignment="Center" Orientation="Horizontal">
                <TextBlock Foreground="{StaticResource SOCELightRed}" Text="Ongoing Projects:" FontWeight="SemiBold" FontStyle="Italic" FontSize="20"/>
                <TextBlock Foreground="{StaticResource SOCELightRed}" Text="[" FontWeight="Bold" FontSize="20" Margin="5 0 0 0"/>
                <TextBlock Foreground="{StaticResource SOCELightRed}" Text="8" FontWeight="Bold" FontSize="20"/>
                <TextBlock Foreground="{StaticResource SOCELightRed}" Text="]" FontWeight="Bold" FontSize="20"/>
            </StackPanel>

            <materialDesign:Card Grid.Row="1">
                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Clients:" FontSize="24" FontWeight="SemiBold"  Foreground="{StaticResource SOCELightRed}" HorizontalAlignment="Left"/>
                        <Button Grid.Column="1" IsEnabled="{Binding CanAddProject}" Style="{StaticResource MaterialDesignRaisedButton}" Foreground="White" Background="ForestGreen" Command="{Binding GoToAddClient}" HorizontalAlignment="Right">
                            <materialDesign:PackIcon Kind="Plus" VerticalAlignment="Center" Padding="0" ToolTip="Add Client"/>
                        </Button>
                    </Grid>

                    <ScrollViewer HorizontalAlignment="Stretch" Grid.Row="3" Margin="5 20 5 5">
                        <ItemsControl ItemsSource="{Binding Clients}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Background="Transparent" IsEnabled="{Binding Path=DataContext.IsEditable, RelativeSource= {RelativeSource FindAncestor, AncestorType={x:Type ItemsControl}}}" Margin="0 5 0 0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="5">
                                            <Button HorizontalAlignment="Left" Height="20" Width="20" Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}" Command="{Binding Path=DataContext.DeleteClient, RelativeSource= {RelativeSource FindAncestor, AncestorType={x:Type ItemsControl}}}" CommandParameter="{Binding}" ToolTip="Delete">
                                                <Button.Content>
                                                    <materialDesign:PackIcon Foreground="Black" Kind="TrashCan" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                </Button.Content>
                                            </Button>
                                            <ToggleButton Style="{StaticResource MaterialDesignActionToggleButton}" Height="20" Width="20" Foreground="Black" IsChecked="{Binding EditFieldClientsState, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                                <ToggleButton.Content>
                                                    <materialDesign:PackIcon Kind="ContentSave" VerticalAlignment="Center" HorizontalAlignment="Center" ToolTip="Save"/>
                                                </ToggleButton.Content>
                                                <materialDesign:ToggleButtonAssist.OnContent>
                                                        <materialDesign:PackIcon Kind="Lock" VerticalAlignment="Center" HorizontalAlignment="Center" ToolTip="Edit"/>
                                                </materialDesign:ToggleButtonAssist.OnContent>
                                            </ToggleButton>
                                        </StackPanel>
                                        <TextBox Grid.Column="1" MinWidth="125" Margin="10 0 0 0" IsReadOnly="{Binding EditFieldClientsState}" HorizontalAlignment="Left" Text="{Binding ClientName}" TextAlignment="Left" FontSize="14" FontWeight="Regular" VerticalAlignment="Center"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </materialDesign:Card>

            <materialDesign:Card Grid.Row="2" Margin="0 30 0 0">
                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Markets:" FontSize="24" FontWeight="SemiBold"  Foreground="{StaticResource SOCELightRed}" HorizontalAlignment="Left"/>
                        <Button Grid.Column="1" IsEnabled="{Binding CanAddProject}" Style="{StaticResource MaterialDesignRaisedButton}" Foreground="White" Background="ForestGreen" Command="{Binding GoToAddMarket}" HorizontalAlignment="Right">
                            <materialDesign:PackIcon Kind="Plus" VerticalAlignment="Center" Padding="0" ToolTip="Add Client"/>
                        </Button>
                    </Grid>
                    <ScrollViewer HorizontalAlignment="Stretch" Grid.Row="3" Margin="5 20 5 5">
                        <ItemsControl ItemsSource="{Binding Markets}" >
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Background="Transparent" IsEnabled="{Binding Path=DataContext.IsEditable, RelativeSource= {RelativeSource FindAncestor, AncestorType={x:Type ItemsControl}}}" Margin="0 5 0 0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="5">
                                            <Button HorizontalAlignment="Left" Height="20" Width="20" Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}" Command="{Binding Path=DataContext.DeleteMarket, RelativeSource= {RelativeSource FindAncestor, AncestorType={x:Type ItemsControl}}}" CommandParameter="{Binding}" ToolTip="Delete">
                                                <Button.Content>
                                                    <materialDesign:PackIcon Foreground="Black" Kind="TrashCan" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                </Button.Content>
                                            </Button>
                                            <ToggleButton Style="{StaticResource MaterialDesignActionToggleButton}" Height="20" Width="20" Foreground="Black" IsChecked="{Binding EditFieldMarketState, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                                <ToggleButton.Content>
                                                    <materialDesign:PackIcon Kind="ContentSave" VerticalAlignment="Center" HorizontalAlignment="Center" ToolTip="Save"/>
                                                </ToggleButton.Content>
                                                <materialDesign:ToggleButtonAssist.OnContent>
                                                    <materialDesign:PackIcon Kind="Lock" VerticalAlignment="Center" HorizontalAlignment="Center" ToolTip="Edit"/>
                                                </materialDesign:ToggleButtonAssist.OnContent>
                                            </ToggleButton>
                                        </StackPanel>
                                        
                                        <TextBox Grid.Column="1" MinWidth="125" Margin="10 0 0 0" IsReadOnly="{Binding EditFieldMarketState}" HorizontalAlignment="Left" Text="{Binding MarketName}" TextAlignment="Left" FontSize="14" FontWeight="Regular" VerticalAlignment="Center"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </materialDesign:Card>
        </Grid>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!--Page Title-->
            <TextBlock Text="Projects" Grid.Row="0" FontSize="32" FontWeight="SemiBold"  Foreground="{StaticResource SOCERed}" HorizontalAlignment="Left"/>

            <!--Seprator-->
            <Separator Height="1" Grid.Row="1" Background="#DAE2EA" Margin="0 -1 0 10"/>

            <!--Counter Title-->
            <TextBlock Text="{Binding TextProjects}" Grid.Row="2" FontSize="18" FontWeight="SemiBold" Foreground="{StaticResource SOCERed}" HorizontalAlignment="Left" VerticalAlignment="Center"/>

            <!--Add Button-->
            <Button Grid.Row="2" IsEnabled="{Binding CanAddProject}" Style="{StaticResource MaterialDesignRaisedButton}" Foreground="White" Background="{StaticResource SOCERed}" Command="{Binding GoToAddProject}" HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Plus" VerticalAlignment="Center" Margin="0 1 8 0" Width="11" Height="11"/>
                    <TextBlock Text="Add New Project"/>
                </StackPanel>
            </Button>

            <ScrollViewer Grid.Row="3" Margin="5 20 5 5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <ScrollViewer.Resources>
                    <local:InvoicedColorConverter x:Key="valueconverter"/>
                </ScrollViewer.Resources>
                <ItemsControl ItemsSource="{Binding Projects}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Expander Background="Transparent" IsEnabled="{Binding Path=DataContext.IsEditable, RelativeSource= {RelativeSource FindAncestor, AncestorType={x:Type ItemsControl}}}">
                                <!--TODO-->
                                <Expander.Header>
                                    <Grid Margin="0 5 0 0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!--#region Edit Delete Buttons-->
                                        <StackPanel Orientation="Horizontal" Margin="10">
                                            <Button HorizontalAlignment="Left" Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}" Command="{Binding Path=DataContext.DeleteProject, RelativeSource= {RelativeSource FindAncestor, AncestorType={x:Type ItemsControl}}}" CommandParameter="{Binding}" ToolTip="Delete">
                                                <Button.Content>
                                                    <Border CornerRadius="3" Background="{StaticResource SOCERed}" Height="27" Width="27" >
                                                        <materialDesign:PackIcon Foreground="White" Kind="TrashCan" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                    </Border>
                                                </Button.Content>
                                            </Button>
                                            <ToggleButton Style="{StaticResource MaterialDesignActionToggleButton}" Foreground="White" IsChecked="{Binding EditFieldState, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                                <ToggleButton.Content>
                                                    <Border CornerRadius="8" Background="ForestGreen" Height="27" Width="27" ToolTip="Save">
                                                        <materialDesign:PackIcon Kind="ContentSave" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                    </Border>
                                                </ToggleButton.Content>
                                                <materialDesign:ToggleButtonAssist.OnContent>
                                                    <Border Background="Orange" Height="27" Width="27" ToolTip="Edit">
                                                        <materialDesign:PackIcon Kind="Lock" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                    </Border>
                                                </materialDesign:ToggleButtonAssist.OnContent>
                                            </ToggleButton>
                                        </StackPanel>
                                        <!--#endregion-->

                                        <TextBox Grid.Column="1" 
                                                 MinWidth="125" 
                                                 Margin="10 0 0 0" 
                                                 IsReadOnly="{Binding EditFieldState}" 
                                                 HorizontalAlignment="Left" 
                                                 Text="{Binding ProjectName}" 
                                                 TextAlignment="Left" 
                                                 FontSize="16" 
                                                 FontWeight="Bold" 
                                                 VerticalAlignment="Center"/>

                                        <TextBox Grid.Column="2" 
                                                 MinWidth="125" 
                                                 Margin="10 0 0 0" 
                                                 IsReadOnly="{Binding EditFieldState}" 
                                                 HorizontalAlignment="Left" 
                                                 Text="{Binding ProjectNumber}" 
                                                 TextAlignment="Left" 
                                                 FontSize="16" 
                                                 FontWeight="Bold" 
                                                 VerticalAlignment="Center"/>

                                        <ComboBox Grid.Column="3" Margin="10 0 0 0" FontSize="14"
                                              IsEnabled="{Binding ComboFieldState}"
                                              ItemsSource="{Binding Path=DataContext.Clients, RelativeSource= {RelativeSource FindAncestor, AncestorType={x:Type ItemsControl}}}"
                                              DisplayMemberPath="ClientName" 
                                              SelectedItem="{Binding Path= Client, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  
                                              MinWidth="125"/>

                                        <ComboBox Grid.Column="4" Margin="10 0 0 0" FontSize="14"
                                              IsEnabled="{Binding ComboFieldState}"
                                              ItemsSource="{Binding Path=DataContext.Markets, RelativeSource= {RelativeSource FindAncestor, AncestorType={x:Type ItemsControl}}}"
                                              DisplayMemberPath="MarketName" 
                                              SelectedItem="{Binding Path= Market, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  
                                              MinWidth="125"/>

                                        <ComboBox Grid.Column="5" Margin="10 0 0 0" FontSize="14"
                                              IsEnabled="{Binding ComboFieldState}"
                                              ItemsSource="{Binding Path=DataContext.ProjectManagers, RelativeSource= {RelativeSource FindAncestor, AncestorType={x:Type ItemsControl}}}"
                                              DisplayMemberPath="FullName" 
                                              SelectedItem="{Binding Path= ProjectManager, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"    
                                              MinWidth="125"/>

                                        <TextBox Grid.Column="6"
                                                 materialDesign:TextFieldAssist.PrefixText="%"
                                                 Margin="10 0 0 0" 
                                                 IsReadOnly="{Binding EditFieldState}" 
                                                 HorizontalAlignment="Center" 
                                                 Text="{Binding PercentComplete}" 
                                                 Foreground="{Binding PercentCompleteColor}"
                                                 TextAlignment="Left" 
                                                 FontSize="16" 
                                                 FontWeight="Thin" 
                                                 VerticalAlignment="Center"/>

                                        <!--#region Folder Buttons-->
                                        <Grid Grid.Column="7" HorizontalAlignment="Right" VerticalAlignment="Center">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <!--#region ProjectFile-->
                                            <Grid Grid.Column="0" Margin="10 0 0 0">
                                                <Button Style="{StaticResource MaterialDesignFlatButton}" Height="40" Width="40" Command="{Binding OpenProjectFolderCommand}" ToolTip="Project">
                                                    <Button.Content>
                                                        <materialDesign:PackIcon Width="30" Height="30" Foreground="Black" Kind="AlphaP" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                    </Button.Content>
                                                </Button>

                                                <materialDesign:PopupBox Width="25" Height="25" Padding="0" Margin="-5,-30,0,0" 
                                                                         Style="{StaticResource MaterialDesignMultiFloatingActionAccentPopupBox}"
                                                                         PlacementMode="TopAndAlignCentres" StaysOpen="True">
                                                    <materialDesign:PopupBox.ToggleContent>
                                                        <materialDesign:PackIcon Kind="Add" Width="20" Height="20"/>
                                                    </materialDesign:PopupBox.ToggleContent>
                                                    <materialDesign:PopupBox.ToggleCheckedContent>
                                                        <materialDesign:PackIcon Kind="Edit"/>
                                                    </materialDesign:PopupBox.ToggleCheckedContent>
                                                    <!--#region PopupProjectFile-->
                                                    <Border Background="#6F7378" CornerRadius="4" BorderThickness="0" MaxWidth="300">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>
                                                            <Button Grid.Column="0" HorizontalAlignment="Left" Style="{StaticResource MaterialDesignFlatButton}" Command="{Binding SelectProjectFolderCommand}" ToolTip="Select Folder">
                                                                <Button.Content>
                                                                    <materialDesign:PackIcon Foreground="White" Kind="Folder" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                                </Button.Content>
                                                            </Button>
                                                            <TextBox Grid.Column="1" IsReadOnly="True" Text="{Binding Projectfolder}"  Foreground="White" materialDesign:HintAssist.Hint="Filename" VerticalAlignment="Center" materialDesign:TextFieldAssist.HasClearButton="True"/>
                                                            <Button Grid.Column="2" HorizontalAlignment="Left"  Style="{StaticResource MaterialDesignFlatButton}" Command="{Binding CopyProjectFolderCommand}" ToolTip="Copy">
                                                                <Button.Content>
                                                                    <materialDesign:PackIcon Foreground="White" Kind="ContentCopy" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                                </Button.Content>
                                                            </Button>
                                                        </Grid>

                                                    </Border>
                                                    <!--#endregion-->
                                                </materialDesign:PopupBox>
                                            </Grid>
                                            <!--#endregion-->

                                            <!--#region Drawingsfolder-->
                                            <Grid Grid.Column="1" Margin="10 0 0 0">
                                                <Button Style="{StaticResource MaterialDesignFlatButton}" Height="40" Width="40" Command="{Binding OpenDrawingsFolderCommand}" ToolTip="Drawings">
                                                    <Button.Content>
                                                        <materialDesign:PackIcon Width="30" Height="30" Foreground="Black" Kind="AlphaD" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                    </Button.Content>
                                                </Button>

                                                <materialDesign:PopupBox Width="25" Height="25" Padding="0" Margin="-5,-30,0,0" 
                                                                         Style="{StaticResource MaterialDesignMultiFloatingActionAccentPopupBox}"
                                                                         PlacementMode="TopAndAlignCentres" StaysOpen="True">
                                                    <materialDesign:PopupBox.ToggleContent>
                                                        <materialDesign:PackIcon Kind="Add" Width="20" Height="20"/>
                                                    </materialDesign:PopupBox.ToggleContent>
                                                    <materialDesign:PopupBox.ToggleCheckedContent>
                                                        <materialDesign:PackIcon Kind="Edit"/>
                                                    </materialDesign:PopupBox.ToggleCheckedContent>
                                                    <!--#region PopupProjectFile-->
                                                    <Border Background="#6F7378" CornerRadius="4" BorderThickness="0" MaxWidth="300">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>
                                                            <Button Grid.Column="0" HorizontalAlignment="Left" Style="{StaticResource MaterialDesignFlatButton}" Command="{Binding SelectDrawingsFolderCommand}" ToolTip="Select Folder">
                                                                <Button.Content>
                                                                    <materialDesign:PackIcon Foreground="White" Kind="Folder" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                                </Button.Content>
                                                            </Button>
                                                            <TextBox Grid.Column="1" IsReadOnly="True" Text="{Binding Drawingsfolder}"  Foreground="White" materialDesign:HintAssist.Hint="Filename" VerticalAlignment="Center" materialDesign:TextFieldAssist.HasClearButton="True"/>
                                                            <Button Grid.Column="2" HorizontalAlignment="Left"  Style="{StaticResource MaterialDesignFlatButton}" Command="{Binding CopyDrawingsFolderCommand}" ToolTip="Copy">
                                                                <Button.Content>
                                                                    <materialDesign:PackIcon Foreground="White" Kind="ContentCopy" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                                </Button.Content>
                                                            </Button>
                                                        </Grid>

                                                    </Border>
                                                    <!--#endregion-->
                                                </materialDesign:PopupBox>
                                            </Grid>
                                            <!--#endregion-->

                                            <!--#region ArchFile-->
                                            <Grid Grid.Column="2" Margin="10 0 0 0">
                                                <Button Style="{StaticResource MaterialDesignFlatButton}" Height="40" Width="40" Command="{Binding OpenArchitectFolderCommand}" ToolTip="Architecturals">
                                                    <Button.Content>
                                                        <materialDesign:PackIcon Width="30" Height="30" Foreground="Black" Kind="AlphaA" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                    </Button.Content>
                                                </Button>

                                                <materialDesign:PopupBox Width="25" Height="25" Padding="0" Margin="-5,-30,0,0" 
                                                                         Style="{StaticResource MaterialDesignMultiFloatingActionAccentPopupBox}"
                                                                         PlacementMode="TopAndAlignCentres" StaysOpen="True">
                                                    <materialDesign:PopupBox.ToggleContent>
                                                        <materialDesign:PackIcon Kind="Add" Width="20" Height="20"/>
                                                    </materialDesign:PopupBox.ToggleContent>
                                                    <materialDesign:PopupBox.ToggleCheckedContent>
                                                        <materialDesign:PackIcon Kind="Edit"/>
                                                    </materialDesign:PopupBox.ToggleCheckedContent>
                                                    <!--#region PopupProjectFile-->
                                                    <Border Background="#6F7378" CornerRadius="4" BorderThickness="0" MaxWidth="300">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>
                                                            <Button Grid.Column="0" HorizontalAlignment="Left" Style="{StaticResource MaterialDesignFlatButton}" Command="{Binding SelectArchitectFolderCommand}" ToolTip="Select Folder">
                                                                <Button.Content>
                                                                    <materialDesign:PackIcon Foreground="White" Kind="Folder" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                                </Button.Content>
                                                            </Button>
                                                            <TextBox Grid.Column="1" IsReadOnly="True" Text="{Binding Architectfolder}"  Foreground="White" materialDesign:HintAssist.Hint="Filename" VerticalAlignment="Center" materialDesign:TextFieldAssist.HasClearButton="True"/>
                                                            <Button Grid.Column="2" HorizontalAlignment="Left"  Style="{StaticResource MaterialDesignFlatButton}" Command="{Binding CopyArchitectFolderCommand}" ToolTip="Copy">
                                                                <Button.Content>
                                                                    <materialDesign:PackIcon Foreground="White" Kind="ContentCopy" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                                </Button.Content>
                                                            </Button>
                                                        </Grid>

                                                    </Border>
                                                    <!--#endregion-->
                                                </materialDesign:PopupBox>
                                            </Grid>
                                            <!--#endregion-->

                                            <!--#region PlotFile-->
                                            <Grid Grid.Column="3" Margin="10 0 0 0">
                                                <Button Style="{StaticResource MaterialDesignFlatButton}" Height="40" Width="40" Command="{Binding OpenPlotFolderCommand}" ToolTip="Plot">
                                                    <Button.Content>
                                                        <materialDesign:PackIcon Width="30" Height="30" Foreground="Black" Kind="AlphaP" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                    </Button.Content>
                                                </Button>

                                                <materialDesign:PopupBox Width="25" Height="25" Padding="0" Margin="-5,-30,0,0" 
                                                                         Style="{StaticResource MaterialDesignMultiFloatingActionAccentPopupBox}"
                                                                         PlacementMode="TopAndAlignCentres" StaysOpen="True">
                                                    <materialDesign:PopupBox.ToggleContent>
                                                        <materialDesign:PackIcon Kind="Add" Width="20" Height="20"/>
                                                    </materialDesign:PopupBox.ToggleContent>
                                                    <materialDesign:PopupBox.ToggleCheckedContent>
                                                        <materialDesign:PackIcon Kind="Edit"/>
                                                    </materialDesign:PopupBox.ToggleCheckedContent>
                                                    <!--#region PopupProjectFile-->
                                                    <Border Background="#6F7378" CornerRadius="4" BorderThickness="0" MaxWidth="300">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>
                                                            <Button Grid.Column="0" HorizontalAlignment="Left" Style="{StaticResource MaterialDesignFlatButton}" Command="{Binding SelectPlotFolderCommand}" ToolTip="Select Folder">
                                                                <Button.Content>
                                                                    <materialDesign:PackIcon Foreground="White" Kind="Folder" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                                </Button.Content>
                                                            </Button>
                                                            <TextBox Grid.Column="1" IsReadOnly="True" Text="{Binding Plotfolder}"  Foreground="White" materialDesign:HintAssist.Hint="Filename" VerticalAlignment="Center" materialDesign:TextFieldAssist.HasClearButton="True"/>
                                                            <Button Grid.Column="2" HorizontalAlignment="Left"  Style="{StaticResource MaterialDesignFlatButton}" Command="{Binding CopyPlotFolderCommand}" ToolTip="Copy">
                                                                <Button.Content>
                                                                    <materialDesign:PackIcon Foreground="White" Kind="ContentCopy" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                                </Button.Content>
                                                            </Button>
                                                        </Grid>

                                                    </Border>
                                                    <!--#endregion-->
                                                </materialDesign:PopupBox>
                                            </Grid>
                                            <!--#endregion-->

                                        </Grid>
                                        <!--#endregion-->

                                    </Grid>
                                </Expander.Header>
                                <Grid Margin="15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="300"/>
                                    </Grid.ColumnDefinitions>

                                    <Grid Grid.Column="0" Margin="5" Height="200" >
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="40"/>
                                            <RowDefinition Height="40"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <StackPanel Margin="10 0 0 0" Grid.Row="0" Orientation="Horizontal">
                                            <TextBlock HorizontalAlignment ="Left" VerticalAlignment="Center" FontSize="24" FontWeight="SemiBold" Text="Project Phases" />
                                            <Button Margin="10 0 0 0" IsEnabled="{Binding CanAddProject}"
                                                    Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}" 
                                                    Foreground="Black" Background="Transparent" 
                                                    Command="{Binding Path=DataContext.GoToAddSubProject, RelativeSource= {RelativeSource FindAncestor, AncestorType={x:Type ItemsControl}}}"
                                                    ToolTip="Add Phase">
                                                <materialDesign:PackIcon Kind="Plus" VerticalAlignment="Center" Padding="0" ToolTip="Add Client"/>
                                            </Button>
                                        </StackPanel>

                                        <Grid Grid.Row="1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="50"/>
                                                <ColumnDefinition Width="75"/>
                                                <ColumnDefinition Width="250"/>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="75"/>
                                                <ColumnDefinition Width="75"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="1" FontSize="14" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Phase" />
                                            <TextBlock Grid.Column="2" FontSize="14" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Description" />
                                            <TextBlock Grid.Column="3" FontSize="14" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Fee" />
                                            <TextBlock Grid.Column="4" FontSize="14" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center"  Text="% Budget"/>
                                            <TextBlock Grid.Column="5" FontSize="14" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center"  Text="Est. Fee"/>
                                            <TextBlock Grid.Column="6" FontSize="14" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center"  Text="% Complete"/>
                                            <TextBlock Grid.Column="7" FontSize="14" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center"  Text="Active?"/>
                                            <TextBlock Grid.Column="8" FontSize="14" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center"  Text="Invoiced?"/>


                                            <!--<TextBlock Grid.Column="5" FontSize="14" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center"  Text="Live"/>
                                            <TextBlock Grid.Column="6" FontSize="14" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center"  Text="Invoiced"/>-->
                                        </Grid>

                                        <ScrollViewer Grid.Row="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                            <ItemsControl ItemsSource="{Binding SubProjects}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        
                                                        <Border BorderBrush="LightGray" BorderThickness="0 0.5 0 0.5"  Background="{Binding IsInvoiced, Converter={StaticResource valueconverter}}">
                                                            <Grid Margin="0 5 0 5">
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="50"/>
                                                                    <ColumnDefinition Width="75"/>
                                                                    <ColumnDefinition Width="250"/>
                                                                    <ColumnDefinition Width="100"/>
                                                                    <ColumnDefinition Width="100"/>
                                                                    <ColumnDefinition Width="100"/>
                                                                    <ColumnDefinition Width="100"/>
                                                                    <ColumnDefinition Width="75"/>
                                                                    <ColumnDefinition Width="75"/>

                                                                </Grid.ColumnDefinitions>
                                                                <!--#region Edit Delete Buttons-->
                                                                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="10 0 0 0">
                                                                    <Button HorizontalAlignment="Left" Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}" Background="Transparent"  Foreground="Black" Height="20" Width="20" Command="{Binding Path=DataContext.DeleteSubProject, RelativeSource= {RelativeSource FindAncestor, AncestorType={x:Type UserControl}}}" CommandParameter="{Binding}" ToolTip="Delete">
                                                                        <Button.Content>
                                                                            <materialDesign:PackIcon Height="15" Width="15" Kind="TrashCan" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                                        </Button.Content>
                                                                    </Button>
                                                                    <ToggleButton Style="{StaticResource MaterialDesignActionToggleButton}" Background="Transparent" Foreground="Black" Height="20" Width="20" IsChecked="{Binding EditSubFieldState, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                                                        <ToggleButton.Content>
                                                                            <materialDesign:PackIcon Height="15" Width="15" Kind="ContentSave" VerticalAlignment="Center" HorizontalAlignment="Center" ToolTip="Save"/>
                                                                        </ToggleButton.Content>
                                                                        <materialDesign:ToggleButtonAssist.OnContent>
                                                                            <materialDesign:PackIcon Kind="Lock" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                                        </materialDesign:ToggleButtonAssist.OnContent>
                                                                    </ToggleButton>
                                                                </StackPanel>
                                                                <!--#endregion-->
                                                                <TextBox Grid.Column="1" IsReadOnly="{Binding EditSubFieldState}" FontSize="14" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding PointNumber}"/>
                                                                <TextBox Grid.Column="2" IsReadOnly="{Binding EditSubFieldState}" FontWeight="Regular" FontSize="12" HorizontalAlignment="Left" VerticalAlignment="Center" Text="{Binding Description}" />
                                                                <TextBox Grid.Column="3" IsReadOnly="{Binding EditSubFieldState}" FontWeight="Regular" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding Fee}" materialDesign:TextFieldAssist.PrefixText="$"/>
                                                                <TextBox Grid.Column="4" IsReadOnly="{Binding EditSubFieldState}" FontWeight="Regular" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding PercentBudget}" materialDesign:TextFieldAssist.PrefixText="%"/>
                                                                <TextBox Grid.Column="5" IsReadOnly="True" FontWeight="Regular" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding EstimatedFee}" materialDesign:TextFieldAssist.PrefixText="$"/>
                                                                <TextBox Grid.Column="6" IsReadOnly="{Binding EditSubFieldState}" FontWeight="Regular" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding PercentComplete}" materialDesign:TextFieldAssist.PrefixText="%"/>
                                                                <CheckBox Grid.Column="7" IsEnabled="{Binding ComboSubFieldState}" Style="{StaticResource MaterialDesignCheckBox}" IsChecked="{Binding IsActive}" HorizontalAlignment="Center" Background="DarkGray" />
                                                                <CheckBox Grid.Column="8" IsEnabled="{Binding ComboSubFieldState}" Style="{StaticResource MaterialDesignCheckBox}" IsChecked="{Binding IsInvoiced}" HorizontalAlignment="Center" Background="DarkGray"/>
                                                            </Grid>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </ScrollViewer>
                                    </Grid>

                                    

                                    <GroupBox Grid.Column="2" Margin="10" Padding="10 10 10 5"
                                              Header="BUDGET SUMMARY"
                                              Style="{DynamicResource MaterialDesignCardGroupBox}"
                                              materialDesign:ColorZoneAssist.Mode="Custom"
                                              materialDesign:ColorZoneAssist.Background="#525252"
                                              materialDesign:ColorZoneAssist.Foreground="White">
                                        <GroupBox.HeaderTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">

                                                    <materialDesign:PackIcon Kind="{Binding Path=DataContext.IconforBudgetSummary, RelativeSource= {RelativeSource FindAncestor, AncestorType={x:Type GroupBox}}}" Height="32" Width="32" VerticalAlignment="Center" />

                                                    <!--<materialDesign:PackIcon Kind="{Binding IconforBudgetSummary, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Height="32" Width="32" VerticalAlignment="Center" />-->
                                                    <TextBlock Margin="8,0,0,0" VerticalAlignment="Center" FontSize="16" FontWeight="SemiBold" Text="{Binding}" />
                                                </StackPanel>
                                            </DataTemplate>
                                        </GroupBox.HeaderTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Grid.Column="0" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center" FontWeight="SemiBold" FontSize="14" Text="Total Budget:"/>
                                            <TextBlock Grid.Column="0" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center" FontWeight="SemiBold" FontSize="14" Text="Budget Spent:"/>
                                            <TextBlock Grid.Column="0" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Center" FontWeight="SemiBold" FontSize="14" Text="Budget Left:"/>
                                            <TextBlock Grid.Column="0" Grid.Row="3" HorizontalAlignment="Left" VerticalAlignment="Center" FontWeight="SemiBold" FontSize="14" Text="Hours Spent:"/>
                                            <TextBlock Grid.Column="0" Grid.Row="4" HorizontalAlignment="Left" VerticalAlignment="Center" FontWeight="SemiBold" FontSize="14" Text="Hours Left:"/>

                                            <TextBox Grid.Column="1" Grid.Row="0" IsReadOnly="True" HorizontalAlignment="Stretch" VerticalAlignment="Center" FontWeight="Regular" FontSize="14" Text="{Binding TotalBudget}" materialDesign:TextFieldAssist.PrefixText="$" Margin="10 0 0 0"/>
                                            <TextBox Grid.Column="1" Grid.Row="1" IsReadOnly="True" HorizontalAlignment="Stretch" VerticalAlignment="Center" FontWeight="Regular" FontSize="14" Text="{Binding BudgetSpent}" materialDesign:TextFieldAssist.PrefixText="$" Margin="10 0 0 0"/>
                                            <TextBox Grid.Column="1" Grid.Row="2" IsReadOnly="True" HorizontalAlignment="Stretch" VerticalAlignment="Center" FontWeight="Regular" FontSize="14" Text="{Binding BudgetLeft}" materialDesign:TextFieldAssist.PrefixText="$" Margin="10 0 0 0"/>
                                            <TextBox Grid.Column="1" Grid.Row="3" IsReadOnly="True" HorizontalAlignment="Stretch" VerticalAlignment="Center" FontWeight="Regular" FontSize="14" Text="{Binding HoursSpent}" materialDesign:TextFieldAssist.SuffixText="hr." Margin="10 0 0 0"/>
                                            <TextBox Grid.Column="1" Grid.Row="4" IsReadOnly="True" HorizontalAlignment="Stretch" VerticalAlignment="Center" FontWeight="Regular" FontSize="14" Text="{Binding HoursLeft}" materialDesign:TextFieldAssist.SuffixText="hr." Margin="10 0 0 0"/>

                                            <StackPanel Grid.Row="5" Orientation="Vertical" Grid.ColumnSpan="2" VerticalAlignment="Bottom" Margin="0 10 0 0">
                                                <Grid>
                                                    <ProgressBar Height="15" Orientation="Horizontal" Value="{Binding PercentBudgetSpent}" Foreground="{StaticResource SOCELightRed}" BorderThickness="1" BorderBrush="LightGray"/>
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                        <TextBlock Text="Budget Spent: %" FontSize="10" FontWeight="SemiBold"/>
                                                        <TextBlock Text="{Binding PercentBudgetSpent}" FontSize="10" FontWeight="SemiBold"/>
                                                    </StackPanel>
                                                </Grid>
                                                <Grid>
                                                    <ProgressBar Height="15" Orientation="Horizontal" Value="{Binding PercentComplete}" Foreground="Green" BorderThickness="1" BorderBrush="LightGray"/>
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                        <TextBlock Text="Percent Complete: %" FontSize="10" FontWeight="SemiBold"/>
                                                        <TextBlock Text="{Binding PercentComplete}" FontSize="10" FontWeight="SemiBold"/>
                                                    </StackPanel>
                                                </Grid>
                                            </StackPanel>
                                        </Grid>
                                    </GroupBox>

                                </Grid>
                            </Expander>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>

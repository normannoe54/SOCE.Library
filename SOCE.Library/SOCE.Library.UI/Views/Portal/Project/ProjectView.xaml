<UserControl x:Class="SOCE.Library.UI.Views.ProjectView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SOCE.Library.UI"
             xmlns:views="clr-namespace:SOCE.Library.UI.Views"
             xmlns:component="clr-namespace:SOCE.Library.UI.Components"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d">
    <Grid Grid.Column="1" Margin="30 40 20 20">
        <Grid.Resources>
            <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.PopupBox.xaml"/>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="1" Margin="20 0 0 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>

            <!--Total in progress projects-->
            <StackPanel Grid.Row="0" HorizontalAlignment="Center" Orientation="Horizontal">
                <TextBlock Foreground="{StaticResource SOCELightRed}" Text="Ongoing Projects:" FontWeight="SemiBold" FontStyle="Italic" FontSize="20"/>
                <TextBlock Foreground="{StaticResource SOCELightRed}" Text="[" FontWeight="Bold" FontSize="20" Margin="5 0 0 0"/>
                <TextBlock Foreground="{StaticResource SOCELightRed}" Text="8" FontWeight="Bold" FontSize="20"/>
                <TextBlock Foreground="{StaticResource SOCELightRed}" Text="]" FontWeight="Bold" FontSize="20"/>
            </StackPanel>

            <materialDesign:Card Grid.Row="1">
                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Clients:" FontSize="24" FontWeight="SemiBold"  Foreground="{StaticResource SOCELightRed}" HorizontalAlignment="Left"/>
                        <Button Grid.Column="1" IsEnabled="{Binding CanAddProject}" Style="{StaticResource MaterialDesignRaisedButton}" Foreground="White" Background="ForestGreen" Command="{Binding GoToAddClient}" HorizontalAlignment="Right">
                            <materialDesign:PackIcon Kind="Plus" VerticalAlignment="Center" Padding="0" ToolTip="Add Client"/>
                        </Button>
                    </Grid>

                    <ScrollViewer HorizontalAlignment="Stretch" Grid.Row="3" Margin="5 20 5 5">
                        <ItemsControl ItemsSource="{Binding Clients}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Background="Transparent" IsEnabled="{Binding Path=DataContext.IsEditable, RelativeSource= {RelativeSource FindAncestor, AncestorType={x:Type ItemsControl}}}" Margin="0 5 0 0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>

                                        </Grid.ColumnDefinitions>

                                        <StackPanel Orientation="Horizontal" Margin="10">
                                            <Button HorizontalAlignment="Left" Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}" Command="{Binding Path=DataContext.DeleteClient, RelativeSource= {RelativeSource FindAncestor, AncestorType={x:Type ItemsControl}}}" CommandParameter="{Binding}" ToolTip="Delete">
                                                <Button.Content>
                                                    <Border CornerRadius="3" Background="{StaticResource SOCERed}" Height="27" Width="27" >
                                                        <materialDesign:PackIcon Foreground="White" Kind="TrashCan" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                    </Border>
                                                </Button.Content>
                                            </Button>
                                            <ToggleButton Style="{StaticResource MaterialDesignActionToggleButton}" Foreground="White" IsChecked="{Binding EditFieldClientsState, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                                <ToggleButton.Content>
                                                    <Border CornerRadius="8" Background="ForestGreen" Height="27" Width="27" ToolTip="Save">
                                                        <materialDesign:PackIcon Kind="ContentSave" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                    </Border>
                                                </ToggleButton.Content>
                                                <materialDesign:ToggleButtonAssist.OnContent>
                                                    <Border Background="Orange" Height="27" Width="27" ToolTip="Edit">
                                                        <materialDesign:PackIcon Kind="Lock" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                    </Border>
                                                </materialDesign:ToggleButtonAssist.OnContent>
                                            </ToggleButton>
                                        </StackPanel>
                                        <TextBox Grid.Column="1" MinWidth="125" Margin="10 0 0 0" IsReadOnly="{Binding EditFieldClientsState}" HorizontalAlignment="Left" Text="{Binding ClientName}" TextAlignment="Left" FontSize="14" FontWeight="Regular" VerticalAlignment="Center"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </materialDesign:Card>

            <materialDesign:Card Grid.Row="2" Margin="0 30 0 0">
                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Markets:" FontSize="24" FontWeight="SemiBold"  Foreground="{StaticResource SOCELightRed}" HorizontalAlignment="Left"/>
                        <Button Grid.Column="1" IsEnabled="{Binding CanAddProject}" Style="{StaticResource MaterialDesignRaisedButton}" Foreground="White" Background="ForestGreen" Command="{Binding GoToAddMarket}" HorizontalAlignment="Right">
                            <materialDesign:PackIcon Kind="Plus" VerticalAlignment="Center" Padding="0" ToolTip="Add Client"/>
                        </Button>
                    </Grid>
                    <ScrollViewer HorizontalAlignment="Stretch" Grid.Row="3" Margin="5 20 5 5">
                        <ItemsControl ItemsSource="{Binding Markets}" >
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Background="Transparent" IsEnabled="{Binding Path=DataContext.IsEditable, RelativeSource= {RelativeSource FindAncestor, AncestorType={x:Type ItemsControl}}}" Margin="0 5 0 0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Orientation="Horizontal" Margin="10">
                                            <Button HorizontalAlignment="Left" Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}" Command="{Binding Path=DataContext.DeleteClient, RelativeSource= {RelativeSource FindAncestor, AncestorType={x:Type ItemsControl}}}" CommandParameter="{Binding}" ToolTip="Delete">
                                                <Button.Content>
                                                    <Border CornerRadius="3" Background="{StaticResource SOCERed}" Height="27" Width="27" >
                                                        <materialDesign:PackIcon Foreground="White" Kind="TrashCan" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                    </Border>
                                                </Button.Content>
                                            </Button>
                                            <ToggleButton Style="{StaticResource MaterialDesignActionToggleButton}" Foreground="White" IsChecked="{Binding EditFieldMarketState, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                                <ToggleButton.Content>
                                                    <Border CornerRadius="8" Background="ForestGreen" Height="27" Width="27" ToolTip="Save">
                                                        <materialDesign:PackIcon Kind="ContentSave" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                    </Border>
                                                </ToggleButton.Content>
                                                <materialDesign:ToggleButtonAssist.OnContent>
                                                    <Border Background="Orange" Height="27" Width="27" ToolTip="Edit">
                                                        <materialDesign:PackIcon Kind="Lock" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                    </Border>
                                                </materialDesign:ToggleButtonAssist.OnContent>
                                            </ToggleButton>
                                        </StackPanel>
                                        <TextBox Grid.Column="1" MinWidth="125" Margin="10 0 0 0" IsReadOnly="{Binding EditFieldMarketState}" HorizontalAlignment="Left" Text="{Binding MarketName}" TextAlignment="Left" FontSize="14" FontWeight="Regular" VerticalAlignment="Center"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </materialDesign:Card>
        </Grid>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!--Page Title-->
            <TextBlock Text="Projects" Grid.Row="0" FontSize="32" FontWeight="SemiBold"  Foreground="{StaticResource SOCERed}" HorizontalAlignment="Left"/>

            <!--Seprator-->
            <Separator Height="1" Grid.Row="1" Background="#DAE2EA" Margin="0 -1 0 10"/>

            <!--Counter Title-->
            <TextBlock Text="{Binding TextProjects}" Grid.Row="2" FontSize="18" FontWeight="SemiBold" Foreground="{StaticResource SOCERed}" HorizontalAlignment="Left" VerticalAlignment="Center"/>

            <!--Add Button-->
            <Button Grid.Row="2" IsEnabled="{Binding CanAddProject}" Style="{StaticResource MaterialDesignRaisedButton}" Foreground="White" Background="{StaticResource SOCERed}" Command="{Binding GoToAddProject}" HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Plus" VerticalAlignment="Center" Margin="0 1 8 0" Width="11" Height="11"/>
                    <TextBlock Text="Add New Project"/>
                </StackPanel>
            </Button>

            <ScrollViewer Grid.Row="3" Margin="5 20 5 5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <ItemsControl ItemsSource="{Binding Projects}" >
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Expander Background="Transparent" IsEnabled="{Binding Path=DataContext.IsEditable, RelativeSource= {RelativeSource FindAncestor, AncestorType={x:Type ItemsControl}}}">
                                <!--TODO-->
                                <Expander.Header>
                                    <Grid Margin="0 5 0 0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!--#region Edit Delete Buttons-->
                                        <StackPanel Orientation="Horizontal" Margin="10">
                                            <Button HorizontalAlignment="Left" Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}" Command="{Binding Path=DataContext.DeleteProject, RelativeSource= {RelativeSource FindAncestor, AncestorType={x:Type ItemsControl}}}" CommandParameter="{Binding}" ToolTip="Delete">
                                                <Button.Content>
                                                    <Border CornerRadius="3" Background="{StaticResource SOCERed}" Height="27" Width="27" >
                                                        <materialDesign:PackIcon Foreground="White" Kind="TrashCan" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                    </Border>
                                                </Button.Content>
                                            </Button>
                                            <ToggleButton Style="{StaticResource MaterialDesignActionToggleButton}" Foreground="White" IsChecked="{Binding EditFieldState, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                                <ToggleButton.Content>
                                                    <Border CornerRadius="8" Background="ForestGreen" Height="27" Width="27" ToolTip="Save">
                                                        <materialDesign:PackIcon Kind="ContentSave" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                    </Border>
                                                </ToggleButton.Content>
                                                <materialDesign:ToggleButtonAssist.OnContent>
                                                    <Border Background="Orange" Height="27" Width="27" ToolTip="Edit">
                                                        <materialDesign:PackIcon Kind="Lock" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                    </Border>
                                                </materialDesign:ToggleButtonAssist.OnContent>
                                            </ToggleButton>
                                        </StackPanel>
                                        <!--#endregion-->

                                        <TextBox Grid.Column="1" 
                                                 MinWidth="125" 
                                                 Margin="10 0 0 0" 
                                                 IsReadOnly="{Binding EditFieldState}" 
                                                 HorizontalAlignment="Left" 
                                                 Text="{Binding ProjectName}" 
                                                 TextAlignment="Left" 
                                                 FontSize="16" 
                                                 FontWeight="Bold" 
                                                 VerticalAlignment="Center"/>

                                        <TextBox Grid.Column="2" 
                                                 MinWidth="125" 
                                                 Margin="10 0 0 0" 
                                                 IsReadOnly="{Binding EditFieldState}" 
                                                 HorizontalAlignment="Left" 
                                                 Text="{Binding ProjectNumber}" 
                                                 TextAlignment="Left" 
                                                 FontSize="16" 
                                                 FontWeight="Bold" 
                                                 VerticalAlignment="Center"/>

                                        <ComboBox Grid.Column="3" Margin="10 0 0 0" FontSize="14"
                                              IsEnabled="{Binding ComboFieldState}"
                                              ItemsSource="{Binding Path=DataContext.Clients, RelativeSource= {RelativeSource FindAncestor, AncestorType={x:Type ItemsControl}}}"
                                              DisplayMemberPath="ClientName" 
                                              SelectedItem="{Binding Path= Client, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  
                                              MinWidth="125"/>

                                        <ComboBox Grid.Column="4" Margin="10 0 0 0" FontSize="14"
                                              IsEnabled="{Binding ComboFieldState}"
                                              ItemsSource="{Binding Path=DataContext.Markets, RelativeSource= {RelativeSource FindAncestor, AncestorType={x:Type ItemsControl}}}"
                                              DisplayMemberPath="MarketName" 
                                              SelectedItem="{Binding Path= Market, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  
                                              MinWidth="125"/>

                                        <ComboBox Grid.Column="5" Margin="10 0 0 0" FontSize="14"
                                              IsEnabled="{Binding ComboFieldState}"
                                              ItemsSource="{Binding Path=DataContext.ProjectManagers, RelativeSource= {RelativeSource FindAncestor, AncestorType={x:Type ItemsControl}}}"
                                              DisplayMemberPath="FullName" 
                                              SelectedItem="{Binding Path= ProjectManager, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"    
                                              MinWidth="125"/>

                                        <TextBox Grid.Column="6"
                                                 materialDesign:TextFieldAssist.PrefixText="%"
                                                 Margin="10 0 0 0" 
                                                 IsReadOnly="{Binding EditFieldState}" 
                                                 HorizontalAlignment="Center" 
                                                 Text="{Binding PercentComplete}" 
                                                 Foreground="{Binding PercentCompleteColor}"
                                                 TextAlignment="Left" 
                                                 FontSize="16" 
                                                 FontWeight="Thin" 
                                                 VerticalAlignment="Center"/>

                                        <!--#region Folder Buttons-->
                                        <Grid Grid.Column="7" HorizontalAlignment="Right" VerticalAlignment="Center">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <!--#region ProjectFile-->
                                            <Grid Grid.Column="0" Margin="10 0 0 0">
                                                <Button Style="{StaticResource MaterialDesignFlatButton}" Height="40" Width="40" Command="{Binding OpenProjectFolderCommand}" ToolTip="Project">
                                                    <Button.Content>
                                                        <materialDesign:PackIcon Width="30" Height="30" Foreground="Black" Kind="AlphaP" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                    </Button.Content>
                                                </Button>

                                                <materialDesign:PopupBox Width="25" Height="25" Padding="0" Margin="-5,-30,0,0" 
                                                                         Style="{StaticResource MaterialDesignMultiFloatingActionAccentPopupBox}"
                                                                         PlacementMode="TopAndAlignCentres" StaysOpen="True">
                                                    <materialDesign:PopupBox.ToggleContent>
                                                        <materialDesign:PackIcon Kind="Add" Width="20" Height="20"/>
                                                    </materialDesign:PopupBox.ToggleContent>
                                                    <materialDesign:PopupBox.ToggleCheckedContent>
                                                        <materialDesign:PackIcon Kind="Edit"/>
                                                    </materialDesign:PopupBox.ToggleCheckedContent>
                                                    <!--#region PopupProjectFile-->
                                                    <Border Background="#6F7378" CornerRadius="4" BorderThickness="0" MaxWidth="300">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>
                                                            <Button Grid.Column="0" HorizontalAlignment="Left" Style="{StaticResource MaterialDesignFlatButton}" Command="{Binding SelectProjectFolderCommand}" ToolTip="Select Folder">
                                                                <Button.Content>
                                                                    <materialDesign:PackIcon Foreground="White" Kind="Folder" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                                </Button.Content>
                                                            </Button>
                                                            <TextBox Grid.Column="1" IsReadOnly="True" Text="{Binding Projectfolder}"  Foreground="White" materialDesign:HintAssist.Hint="Filename" VerticalAlignment="Center" materialDesign:TextFieldAssist.HasClearButton="True"/>
                                                            <Button Grid.Column="2" HorizontalAlignment="Left"  Style="{StaticResource MaterialDesignFlatButton}" Command="{Binding CopyProjectFolderCommand}" ToolTip="Copy">
                                                                <Button.Content>
                                                                    <materialDesign:PackIcon Foreground="White" Kind="ContentCopy" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                                </Button.Content>
                                                            </Button>
                                                        </Grid>

                                                    </Border>
                                                    <!--#endregion-->
                                                </materialDesign:PopupBox>
                                            </Grid>
                                            <!--#endregion-->

                                            <!--#region Drawingsfolder-->
                                            <Grid Grid.Column="1" Margin="10 0 0 0">
                                                <Button Style="{StaticResource MaterialDesignFlatButton}" Height="40" Width="40" Command="{Binding OpenDrawingsFolderCommand}" ToolTip="Drawings">
                                                    <Button.Content>
                                                        <materialDesign:PackIcon Width="30" Height="30" Foreground="Black" Kind="AlphaD" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                    </Button.Content>
                                                </Button>

                                                <materialDesign:PopupBox Width="25" Height="25" Padding="0" Margin="-5,-30,0,0" 
                                                                         Style="{StaticResource MaterialDesignMultiFloatingActionAccentPopupBox}"
                                                                         PlacementMode="TopAndAlignCentres" StaysOpen="True">
                                                    <materialDesign:PopupBox.ToggleContent>
                                                        <materialDesign:PackIcon Kind="Add" Width="20" Height="20"/>
                                                    </materialDesign:PopupBox.ToggleContent>
                                                    <materialDesign:PopupBox.ToggleCheckedContent>
                                                        <materialDesign:PackIcon Kind="Edit"/>
                                                    </materialDesign:PopupBox.ToggleCheckedContent>
                                                    <!--#region PopupProjectFile-->
                                                    <Border Background="#6F7378" CornerRadius="4" BorderThickness="0" MaxWidth="300">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>
                                                            <Button Grid.Column="0" HorizontalAlignment="Left" Style="{StaticResource MaterialDesignFlatButton}" Command="{Binding SelectDrawingsFolderCommand}" ToolTip="Select Folder">
                                                                <Button.Content>
                                                                    <materialDesign:PackIcon Foreground="White" Kind="Folder" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                                </Button.Content>
                                                            </Button>
                                                            <TextBox Grid.Column="1" IsReadOnly="True" Text="{Binding Drawingsfolder}"  Foreground="White" materialDesign:HintAssist.Hint="Filename" VerticalAlignment="Center" materialDesign:TextFieldAssist.HasClearButton="True"/>
                                                            <Button Grid.Column="2" HorizontalAlignment="Left"  Style="{StaticResource MaterialDesignFlatButton}" Command="{Binding CopyDrawingsFolderCommand}" ToolTip="Copy">
                                                                <Button.Content>
                                                                    <materialDesign:PackIcon Foreground="White" Kind="ContentCopy" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                                </Button.Content>
                                                            </Button>
                                                        </Grid>

                                                    </Border>
                                                    <!--#endregion-->
                                                </materialDesign:PopupBox>
                                            </Grid>
                                            <!--#endregion-->

                                            <!--#region ArchFile-->
                                            <Grid Grid.Column="2" Margin="10 0 0 0">
                                                <Button Style="{StaticResource MaterialDesignFlatButton}" Height="40" Width="40" Command="{Binding OpenArchitectFolderCommand}" ToolTip="Architecturals">
                                                    <Button.Content>
                                                        <materialDesign:PackIcon Width="30" Height="30" Foreground="Black" Kind="AlphaA" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                    </Button.Content>
                                                </Button>

                                                <materialDesign:PopupBox Width="25" Height="25" Padding="0" Margin="-5,-30,0,0" 
                                                                         Style="{StaticResource MaterialDesignMultiFloatingActionAccentPopupBox}"
                                                                         PlacementMode="TopAndAlignCentres" StaysOpen="True">
                                                    <materialDesign:PopupBox.ToggleContent>
                                                        <materialDesign:PackIcon Kind="Add" Width="20" Height="20"/>
                                                    </materialDesign:PopupBox.ToggleContent>
                                                    <materialDesign:PopupBox.ToggleCheckedContent>
                                                        <materialDesign:PackIcon Kind="Edit"/>
                                                    </materialDesign:PopupBox.ToggleCheckedContent>
                                                    <!--#region PopupProjectFile-->
                                                    <Border Background="#6F7378" CornerRadius="4" BorderThickness="0" MaxWidth="300">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>
                                                            <Button Grid.Column="0" HorizontalAlignment="Left" Style="{StaticResource MaterialDesignFlatButton}" Command="{Binding SelectArchitectFolderCommand}" ToolTip="Select Folder">
                                                                <Button.Content>
                                                                    <materialDesign:PackIcon Foreground="White" Kind="Folder" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                                </Button.Content>
                                                            </Button>
                                                            <TextBox Grid.Column="1" IsReadOnly="True" Text="{Binding Architectfolder}"  Foreground="White" materialDesign:HintAssist.Hint="Filename" VerticalAlignment="Center" materialDesign:TextFieldAssist.HasClearButton="True"/>
                                                            <Button Grid.Column="2" HorizontalAlignment="Left"  Style="{StaticResource MaterialDesignFlatButton}" Command="{Binding CopyArchitectFolderCommand}" ToolTip="Copy">
                                                                <Button.Content>
                                                                    <materialDesign:PackIcon Foreground="White" Kind="ContentCopy" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                                </Button.Content>
                                                            </Button>
                                                        </Grid>

                                                    </Border>
                                                    <!--#endregion-->
                                                </materialDesign:PopupBox>
                                            </Grid>
                                            <!--#endregion-->

                                            <!--#region PlotFile-->
                                            <Grid Grid.Column="3" Margin="10 0 0 0">
                                                <Button Style="{StaticResource MaterialDesignFlatButton}" Height="40" Width="40" Command="{Binding OpenPlotFolderCommand}" ToolTip="Plot">
                                                    <Button.Content>
                                                        <materialDesign:PackIcon Width="30" Height="30" Foreground="Black" Kind="AlphaP" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                    </Button.Content>
                                                </Button>

                                                <materialDesign:PopupBox Width="25" Height="25" Padding="0" Margin="-5,-30,0,0" 
                                                                         Style="{StaticResource MaterialDesignMultiFloatingActionAccentPopupBox}"
                                                                         PlacementMode="TopAndAlignCentres" StaysOpen="True">
                                                    <materialDesign:PopupBox.ToggleContent>
                                                        <materialDesign:PackIcon Kind="Add" Width="20" Height="20"/>
                                                    </materialDesign:PopupBox.ToggleContent>
                                                    <materialDesign:PopupBox.ToggleCheckedContent>
                                                        <materialDesign:PackIcon Kind="Edit"/>
                                                    </materialDesign:PopupBox.ToggleCheckedContent>
                                                    <!--#region PopupProjectFile-->
                                                    <Border Background="#6F7378" CornerRadius="4" BorderThickness="0" MaxWidth="300">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>
                                                            <Button Grid.Column="0" HorizontalAlignment="Left" Style="{StaticResource MaterialDesignFlatButton}" Command="{Binding SelectPlotFolderCommand}" ToolTip="Select Folder">
                                                                <Button.Content>
                                                                    <materialDesign:PackIcon Foreground="White" Kind="Folder" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                                </Button.Content>
                                                            </Button>
                                                            <TextBox Grid.Column="1" IsReadOnly="True" Text="{Binding Plotfolder}"  Foreground="White" materialDesign:HintAssist.Hint="Filename" VerticalAlignment="Center" materialDesign:TextFieldAssist.HasClearButton="True"/>
                                                            <Button Grid.Column="2" HorizontalAlignment="Left"  Style="{StaticResource MaterialDesignFlatButton}" Command="{Binding CopyPlotFolderCommand}" ToolTip="Copy">
                                                                <Button.Content>
                                                                    <materialDesign:PackIcon Foreground="White" Kind="ContentCopy" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                                </Button.Content>
                                                            </Button>
                                                        </Grid>

                                                    </Border>
                                                    <!--#endregion-->
                                                </materialDesign:PopupBox>
                                            </Grid>
                                            <!--#endregion-->

                                        </Grid>
                                        <!--#endregion-->

                                    </Grid>
                                </Expander.Header>
                                <Grid Margin="15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Grid Grid.Column="0" Margin="5" Height="200" >
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="40"/>
                                            <RowDefinition Height="40"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <TextBlock Grid.Row="0" Margin="30 0 0 0"  HorizontalAlignment ="Left" VerticalAlignment="Center" FontSize="24" FontWeight="SemiBold" Text="Project Phases" />

                                        <Grid Grid.Row="1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="75"/>
                                                <ColumnDefinition Width="250"/>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="100"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" FontSize="14" FontWeight="SemiBold" Text="Phase" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="1" FontSize="14" FontWeight="SemiBold" Text="Description" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="2" FontSize="14" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center"  Text="% Budget"/>
                                            <TextBlock Grid.Column="3" FontSize="14" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center"  Text="% Complete"/>
                                            <TextBlock Grid.Column="4" FontSize="14" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center"  Text="Est. Fee"/>
                                            <TextBlock Grid.Column="5" FontSize="14" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center"  Text="Live"/>
                                            <TextBlock Grid.Column="6" FontSize="14" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center"  Text="Invoiced"/>
                                        </Grid>

                                        <ScrollViewer Grid.Row="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                            <ItemsControl ItemsSource="{Binding SubProjects}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border BorderBrush="LightGray" BorderThickness="0 0.5 0 0.5">
                                                            <Grid Margin="0 5 0 5">
                                                                <!--<Grid.Resources>
                                                                    <local:DatetoStringFullConverter x:Key="DatetoStringFull"/>
                                                                </Grid.Resources>-->
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="75"/>
                                                                    <ColumnDefinition Width="250"/>
                                                                    <ColumnDefinition Width="100"/>
                                                                    <ColumnDefinition Width="100"/>
                                                                    <ColumnDefinition Width="100"/>
                                                                    <ColumnDefinition Width="100"/>
